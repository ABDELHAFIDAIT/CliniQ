{
  "title": "CliniQ RAG Monitoring",
  "uid": "cliniq-rag",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Requêtes RAG / min",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(cliniq_rag_queries_total[1m]) * 60",
          "legendFormat": "req/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqpm",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Latence RAG p95 (s)",
      "type": "stat",
      "gridPos": {
        "x": 4,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(cliniq_rag_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 30
              },
              {
                "color": "red",
                "value": 60
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Erreurs HTTP / min",
      "type": "stat",
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(cliniq_http_errors_total[1m]) * 60",
          "legendFormat": "erreurs/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Sans contexte / min",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "rate(cliniq_rag_no_context_total[1m]) * 60",
          "legendFormat": "no context/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Latence RAG — distribution (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(cliniq_rag_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(cliniq_rag_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(cliniq_rag_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 6,
      "title": "Requêtes HTTP par endpoint",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(cliniq_http_requests_total[1m])",
          "legendFormat": "{{method}} {{endpoint}} {{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 7,
      "title": "Scores DeepEval (médiane p50)",
      "type": "bargauge",
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(cliniq_eval_score_bucket[15m]))",
          "legendFormat": "{{metric}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.5
              },
              {
                "color": "green",
                "value": 0.7
              }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Échecs métriques DeepEval (< 0.7)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "rate(cliniq_eval_failures_total[5m])",
          "legendFormat": "{{metric}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 9,
      "title": "CPU containers — % utilisation (cAdvisor)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 18,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "group by(container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total{name=~\"cliniq.*\"}[1m]) * 100)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0
        }
      }
    },
    {
      "id": 10,
      "title": "RAM containers — utilisation MB (cAdvisor)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 24,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "group by(container_label_com_docker_compose_service) (container_memory_usage_bytes{name=~\"cliniq.*\"} / 1024 / 1024)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "min": 0
        }
      }
    }
  ]
}